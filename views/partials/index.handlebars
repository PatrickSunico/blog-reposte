<style type="text/css">
  img {
    margin: 0;
    display: none;
  }
</style>
{{#each blogs}}

<div class="row">
  <!-- uncomment code for absolute positioning tweek see top comment in css -->
  <!-- <div class="absolute-wrapper"> </div> -->
  <!-- Menu -->

  <!-- Main Content -->
  <div class="side-body">
    <div class="container-fluid">
      <div class="blog-title">
        <h1> {{this.title}} </h1>
      </div>

      <span class="date">
          <p>
            <strong>  Date Posted:  <!--{{../now}}--> {{this.created}}   </strong>
          </p>
        </span>

      <span class="content" >
        {{{this.body}}}
      </span>

    </div>

    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default"><i class="fa fa-pencil"></i> Edit
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default"><i class="fa fa-trash"></i> Delete
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default"><i class="fa fa-external-link"></i> View
        </button>
      </div>
    </div>
    <!--  end side-body -->
  </div>
</div>

{{/each}}
